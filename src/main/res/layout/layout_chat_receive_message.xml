<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingBottom="10dp"
              android:paddingTop="15dp" >

    <TextView
        android:id="@+id/receive_time"
        android:padding="5dp"
        android:background="#20000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="11dp" >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/receive_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            fresco:actualImageScaleType="focusCrop"
            fresco:placeholderImage="@drawable/ic_account_circle_black_24dp"
            fresco:roundAsCircle="true"/>/>

        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/receive_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="16dp"
            android:textColor="@color/secondary_text"
            android:gravity="left|center"
            android:layout_toRightOf="@id/receive_avatar"
            android:background="@drawable/chat_left_qp"
            android:lineSpacingExtra="3dp"
            android:minWidth="80dp"
            android:maxWidth="225dp"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="40dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"/>

    </RelativeLayout>

</LinearLayout>