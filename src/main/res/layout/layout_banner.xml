<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:fresco="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="300dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/banner_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:actualImageScaleType="focusCrop"
        fresco:fadeDuration="300"
        fresco:progressBarImage="@drawable/ic_autorenew_black_18dp"
        fresco:progressBarImageScaleType="center"
        fresco:progressBarAutoRotateInterval="800"
        fresco:failureImage="@drawable/ic_error_news"
        fresco:placeholderImageScaleType="centerInside"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_shape_gradient"/>

    <TextView
        android:id="@+id/banner_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="25dp"
        android:text="Hello"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"/>
</FrameLayout>