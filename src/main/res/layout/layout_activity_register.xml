<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/register_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/register_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:elevation="3dp"
        app:navigationIcon="@drawable/ic_reply_black_24dp"
        app:title="注册"
        app:titleTextColor="@color/icons">

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="15dp"
        app:cardElevation="1.7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:inputType="textVisiblePassword"
                android:maxLength="20"
                android:id="@+id/register_username_et"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/ic_face_black_24dp"
                android:drawablePadding="20dip"
                android:hint="登录用户名"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:shadowDx="0.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:singleLine="true"
                android:textColorHint="#ffdddddd"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/base_horization_line"/>

            <EditText
                android:maxLength="20"
                android:id="@+id/register_password_et"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawablePadding="20dp"
                android:hint="登录密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColorHint="#ffdddddd"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/base_horization_line"/>

            <EditText

                android:id="@+id/register_re_password_et"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:drawablePadding="20dp"
                android:hint="重复密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColorHint="#ffdddddd"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/base_horization_line"/>

            <EditText
                android:id="@+id/register_nickname_et"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:drawableLeft="@drawable/ic_stars_black_24dp"
                android:drawablePadding="20dp"
                android:hint="个性昵称"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColorHint="#ffdddddd"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/register_login_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:clickable="true"
        app:cardElevation="1.7dp">

        <TextView
            android:id="@+id/register_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="注 册"
            android:textColor="#ffdddddd"
            android:textSize="16sp"/>
    </android.support.v7.widget.CardView>
</LinearLayout>
