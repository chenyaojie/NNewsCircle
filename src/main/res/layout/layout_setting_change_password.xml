<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="15dp">

    <EditText
        android:id="@+id/setting_change_password_old"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="20dp"
        android:hint="当前密码"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:textColorHint="#ffdddddd"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/base_horization_line"/>

    <EditText
        android:id="@+id/setting_change_password_new"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:drawablePadding="20dp"
        android:hint="新密码"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:textColorHint="#ffdddddd"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/base_horization_line"/>

    <EditText
        android:id="@+id/setting_change_password_re"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:drawablePadding="20dp"
        android:hint="重复新密码"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:textColorHint="#ffdddddd"/>

</LinearLayout>